<h1>Recovery files</h1>
<p>Create new volume from <span class="badge bg-primary">.tar</span> file.</p>
<div class="col-8 m-auto">
    <%= form_with(url: "/recover/create", method: "post") do |form| %>
  
        <div class="form-group">
            <%= form.label :name, "File name" %>
            <%= form.text_field :name, value: "#{@name}.tar", readonly: "readonly", class: "form-control"  %>
        </div>

        <div class="form-group">
            <%= form.label :volume, "New volume name" %>
            <%= form.text_field :volume, value: @name, class: "form-control" %>
        </div>

        <div class="mt-3 actions">
            <%= form.submit "Create", class: "btn btn-success form-control" %>
        </div>
    <% end %>
</div>