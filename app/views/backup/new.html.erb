<h1>Backup#new</h1>
<p>Find me in app/views/backup/new.html.erb</p>

<%= form_with(url: "/backup/create", method: "post") do |form| %>
  
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, value: @name, readonly: "readonly", class: "form-control"  %>
    </div>

    <div class="form-group">
        <%= form.label :file %>
        <%= form.text_field :file, value: @name, class: "form-control" %>
    </div>

    <div class="actions">
        <%= form.submit "Create", class: "btn btn-primary form-control" %>
    </div>
<% end %>